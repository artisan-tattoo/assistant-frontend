<h2 class="pull-left">Customers</h2>
<h2>{{sortCustomers.length }}</h2>
<div class="pull-right">
  {{#link-to 'customers.new'}}
    <button class="btn btn-primary">New Customer</button>
  {{/link-to}} 
</div>
<div class="container">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        {{sorting-key title='#'
                      key='id'
                      sortProperties = sortProperties
                      sortAscending = sortAscending
                      action='sort'}}
        {{sorting-key title= 'Name'
                      key='name'
                      sortProperties = sortProperties
                      sortAscending = sortAscending
                      action='sort'}}
        {{sorting-key title= 'Status'
                      key='status'
                      sortProperties = sortProperties
                      sortAscending = sortAscending
                      action='sort'}}
        {{sorting-key title= 'Date On Waiting List'
                      key='dateOnWaitingList'
                      sortProperties = sortProperties
                      sortAscending = sortAscending
                      action='sort'}}
        <th>Phone</th>
      </tr>
    </thead>
    <tbody>
      {{#each sortedCustomers as |customer|}}
        <tr>
          <td>{{customer.id}}</td>
          <td>{{customer.name}}</td>
          <td>{{customer.status}}</td>
          <td>{{customer.dateOnWaitingList}}</td>
          <td>{{customer.phone}}</td>
          <td>
            {{#link-to 'customer' customer tagName="button" class="btn btn-success"}}Show{{/link-to}}
            {{#link-to 'customer.edit' customer tagName="button" class="btn btn-warning"}}Edit{{/link-to}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
