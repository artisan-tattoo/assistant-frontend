<h2 class="pull-left">Customers</h2>
<div class="pull-right">
  {{#link-to 'customers.new'}}
    <button class="btn btn-primary">New Customer</button>
  {{/link-to}} 
</div>
<div class="container">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Phone</th>
        <th>Want</th>
        <th>Notes</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |customer|}}
        <tr>
          <td>{{customer.id}}</td>
          <td>{{customer.name}}</td>
          <td>{{customer.phone}}</td>
          <td>{{customer.want}}</td>
          <td>{{customer.notes}}</td>
          <td>
            {{#link-to 'customer' customer tagName="button" class="btn btn-success"}}Show{{/link-to}}
            {{#link-to 'customer.edit' customer tagName="button" class="btn btn-warning"}}Edit{{/link-to}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
