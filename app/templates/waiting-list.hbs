<h2 class="pull-left">Waiting List</h2>
<div class="container">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Status</th>
        <th>Date on Waiting List</th>
        <th>Phone</th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |customer|}}
        <tr>
          <td>{{customer.id}}</td>
          <td>{{customer.name}}</td>
          <td>{{customer.statusText}}</td>
          <td>{{customer.formattedDateOnWaitingList}}</td>
          <td>{{customer.phone}}</td>
          <td>
            {{#link-to 'customer' customer tagName="button" class="btn btn-success"}}Show{{/link-to}}
            {{#link-to 'appointments.new' tagName="button" class="btn btn-primary"}}Schedule{{/link-to}} 
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
